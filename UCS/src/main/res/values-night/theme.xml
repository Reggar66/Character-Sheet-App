<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>

        <item name="android:alertDialogTheme">@style/AppDialogFragmentTheme</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark_night</item>
        <!-- Disabling elevation overlay -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- My attrs -->
        <item name="textOnPrimary">@color/textOnPrimary_night</item>
        <item name="textOnSecondary">@color/textOnSecondary_night</item>
        <item name="panelElevation">@dimen/panelElevation_4dp</item>
        <item name="colorTextEnabled">@color/textOnSecondary_night</item>
        <item name="colorTextDisabled">@color/colorTextDisabled_night</item>
    </style>

    <!-- Polar night theme. -->
    <style name="AppThemePolarNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_polar_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_polar_night</item>
        <item name="colorSecondary">@color/colorSecondary_polar_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark_polar_night</item>
        <item name="colorAccent">@color/colorAccent_polar_night</item>

        <item name="android:alertDialogTheme">@style/AppDialogFragmentThemePolarNight</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark_polar_night</item>
        <!-- Disabling elevation overlay -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- My attrs -->
        <item name="textOnPrimary">@color/textOnPrimary_polar_night</item>
        <item name="textOnSecondary">@color/textOnSecondary_polar_night</item>
        <item name="panelElevation">@dimen/panelElevation_4dp</item>
        <item name="colorTextEnabled">@color/colorTextEnabled_polar_night</item>
        <item name="colorTextDisabled">@color/colorTextDisabled_polar_night</item>
    </style>
</resources>