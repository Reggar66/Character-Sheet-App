<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorSecondary">@color/colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>

        <item name="android:alertDialogTheme">@style/AppDialogFragmentTheme</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark_night</item>

        <!-- My attrs -->
        <item name="textOnPrimary">@color/textOnPrimary_night</item>
        <item name="textOnSecondary">@color/textOnSecondary_night</item>

    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>
</resources>