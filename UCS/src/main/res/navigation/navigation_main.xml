<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterCreationFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.CharacterCreationFragment"
        tools:layout="@layout/fragment_character_creation">
        <action
            android:id="@+id/action_characterCreationFragment_to_characterListFragment"
            app:destination="@id/characterListFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/characterListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.CharacterListFragment"
        tools:layout="@layout/fragment_character_list">
        <action
            android:id="@+id/action_characterListFragment_to_characterCreationFragment"
            app:destination="@id/characterCreationFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_characterListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_characterListFragment_to_statsFragment"
            app:destination="@id/statsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_characterListFragment_to_spellsFragment"
            app:destination="@id/spellsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_characterListFragment_to_inventoryFragment"
            app:destination="@id/inventoryFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_characterListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/characterListFragment" />
        <action
            android:id="@+id/action_characterListFragment_to_notesFragment2"
            app:destination="@id/notesFragment" />
        <action
            android:id="@+id/action_characterListFragment_to_notesFragment"
            app:destination="@id/notesFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.AboutFragment"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/statsFragment"
        tools:layout="@layout/fragment_stats"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.StatsFragment">
        <action
            android:id="@+id/action_statsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_statsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/characterListFragment" />
    </fragment>
    <fragment
        android:id="@+id/inventoryFragment"
        tools:layout="@layout/fragment_inventory"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.InventoryFragment">
        <action
            android:id="@+id/action_inventoryFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_inventoryFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/characterListFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_spells"
        android:id="@+id/spellsFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.SpellsFragment">
        <action
            android:id="@+id/action_spellsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_spellsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/characterListFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.SettingsFragment" />
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.awkwardlydevelopedapps.unicharsheet.fragments.NotesFragment"
        android:label="NotesFragment">
        <action
            android:id="@+id/action_notesFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_notesFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>