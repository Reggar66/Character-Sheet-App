<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_day</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_day</item>
        <item name="colorSecondary">@color/colorSecondary_day</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark_day</item>
        <item name="colorAccent">@color/colorAccent_day</item>

        <item name="android:alertDialogTheme">@style/AppDialogFragmentTheme</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark_day</item>
        <!-- Disabling elevation overlay -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- My attrs -->
        <item name="textOnPrimary">@color/textOnPrimary_day</item>
        <item name="textOnSecondary">@color/textOnSecondary_day</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>
</resources>