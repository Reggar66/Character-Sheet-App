<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:alertDialogTheme">@style/AppDialogFragmentTheme</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <!-- Preferences style -->
    <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <!-- Style for dialog fragments -->
    <style name="AppDialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@color/colorSecondary</item>
    </style>

    <!-- Bottom Sheet Dialog styles -->
    <style name="BottomSheetBase" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background_drawable</item>
    </style>

    <style name="BottomDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetStyle">@style/BottomSheetBase</item>
    </style>

    <!-- Splash screen theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>

</resources>
